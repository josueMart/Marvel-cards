@import "nib"
@import "./card/styles.styl"

test(color=red)
	border 1px solid color
	box-sizing border-box

body
	font-family Arial
	font-size 16px
	margin 0
	
.Layout
	display flex
	padding .5px
	border 1px solid red
	margin .5em
	test(brown)
	flex-direction column
	justify-content space-between
	min-height 100vh
	background-image url('../images/city.jpg')
	background-size cover
	
	> section
		margin .5em
	&-main
		display flex
		justify-content space-between
	&-status
		test(green)
		width 200px
	&-battle
		test(orange)
		flex 1
		margin 0 .5em
		background-image url('../images/pattern.jpg')
	&-phases
		test(purple)
		width 200px
		position relative
	&-antagonist
		test(aquamarine)
		display flex
		justify-content space-between
	&-player
		test(gray)
		display flex
		justify-content space-between

.Status
	background orange
	
	&-player
		background red
		padding .5em
		color white
		margin 0
	&-points
		text-align center
		padding .5em
		margin 0

.Phases 
	background white
	border 5px dashed red
	position absolute
	right 0
.Battle
	padding .5em
	&-antagonist
		display flex
		justify-content space-between
		> div
			margin 10px
	&-player
		display flex
		justify-content space-between
		> div
			margin 10px