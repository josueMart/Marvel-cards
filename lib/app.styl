@import "./card/styles.styl"

test(color=red)
	border 1px solid color
	box-sizing border-box

body
	font-family Arial
	font-size 16px
	margin 0
	
.Layout
	display flex
	padding .5px
	border 1px solid red
	margin .5em
	test(brown)
	flex-direction column
	justify-content space-between
	min-height 100vh
	
	> section
		margin .5em
	&-main
		display flex
		justify-content space-between
	&-status
		test(green)
		width 200px
	&-battle
		test(orange)
		flex 1
		margin 0 .5em
	&-phases
		test(purple)
		width 200px
	&-antagonist
		test(aquamarine)
		display flex
		justify-content space-between
	&-player
		test(gray)
		display flex
		justify-content space-between
		